<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
  <li>
    <h2><%= link_to article.title, article_path(article) %></h2>
    <em><%= article.blurb %></em>
    <p class="note"><%= link_to "Read more", article_path(article) %></p>
  </li>
  <% end %>
</ul>

<%= link_to "Create New Article", new_article_path, class: "new_article" %>
